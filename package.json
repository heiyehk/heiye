{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/heiyehk/hyjs.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build": "npm run clean && lerna run build --stream && rollup -c",
    "build:ci": "cross-env UMD=1 npm run build",
    "lint": "eslint ./packages --ext ts",
    "fix": "eslint ./packages --ext ts --fix",
    "doc": "docsify",
    "doc:init": "docsify init .",
    "doc:serve": "docsify serve .",
    "tsc": "node scripts/tsconfig.mjs",
    "pkgn": "node scripts/packageJson.mjs",
    "doc:bar": "node scripts/docBar.mjs",
    "r": "rollup -c -w",
    "test": "jest --coverage",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/runtime": "^7.22.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@rollup/plugin-replace": "^3.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.0",
    "@types/node": "^17.0.5",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cross-env": "^7.0.3",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^29.5.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.55.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
